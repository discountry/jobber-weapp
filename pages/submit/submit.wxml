<view class="page">
     <view class="page__bd">
        <view class="weui-cells__title">提交成果</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">url</view>
                </view>
                <view class="weui-cell__bd">
                    <input bindinput="bindUrlInput" class="weui-input" placeholder="请输入url"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea bindinput="bindDescriptionInput" class="weui-textarea" placeholder="备注说明" style="height: 3.3em" />
                </view>
            </view>
          </view>
          <view class="weui-btn-area">
            <button class="weui-btn" type="primary" ontap="submit">提交</button>
          </view>
    </view>
</view>